#
# DHCP Server Configuration file.
#   see /usr/share/doc/dhcp*/dhcpd.conf.sample
#
ddns-update-style interim;
ignore client-updates;
shared-network test {
             subnet 10.20.253.0 netmask 255.255.255.0 {
             }

             subnet 192.168.37.0 netmask 255.255.255.0 {

              # --- default gateway
                 option routers                  192.168.37.1;
                 option subnet-mask              255.255.255.0;
                 range dynamic-bootp 192.168.37.2 192.168.37.3;
                 default-lease-time 100;
                 max-lease-time 200;
}

           subnet 192.168.45.0 netmask 255.255.255.0 {

              # --- default gateway
                option routers                  192.168.45.1;
                 option subnet-mask              255.255.255.0;
                 range dynamic-bootp 192.168.45.2 192.168.45.3;
                 default-lease-time 60;
                 max-lease-time 100;
  }
}
~     
